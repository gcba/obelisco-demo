{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "standard-with-typescript",
    "plugin:react/recommended",
    "next"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "react/prop-types": "off",
    "quotes": [
      "error",
      "single"
    ],
    "indent": [
      "error",
      2
    ],
    "max-len": [
      "warn",
      {
        "code": 100
      }
    ]
  }
}